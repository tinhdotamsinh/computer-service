---
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Image } from "astro:assets";
import { formatCurrency } from "@/lib/formatCurrency";
const {product} = Astro.props;
---
<Card key={product.id} className="hover:shadow-lg transition-shadow">
    <CardHeader className="pb-4">
      <div class="relative">
        <a href={`/san-pham/${product.data.slug}`}>
        <Image
          src={product.data.images[0] || "/placeholder.svg"}
          alt={product.data.title}
          width={200}
          height={200}
          class="w-full h-60 md:h-45 object-cover rounded-lg"
        />
        </a>
        <!-- <Badge
          className="absolute top-2 right-2"
          variant={product.badge === "Sale" ? "destructive" : "default"}
        >
          {product.badge}
        </Badge> -->
      </div>
    </CardHeader>
    <CardContent>
      <div class="mb-2">
        <Badge variant="secondary" className="text-xs">
          {product.data.category}
        </Badge>
      </div>
      <CardTitle className="text-lg mb-2">
        <a href={`/san-pham/${product.data.slug}`} class="hover:text-primary duration-200">
          {product.data.title}
        </a>
      </CardTitle>
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center gap-2">
          <span class="text-2xl font-bold text-primary">{formatCurrency(product.data.price)}</span>
          {product.data.priceSale > product.data.price && (
            <span class="text-sm text-gray-500 line-through">{formatCurrency(product.data.priceSale)}</span>
          )}
        </div>
      </div>
    </CardContent>
  </Card>