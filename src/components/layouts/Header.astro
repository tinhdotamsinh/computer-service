---
import { Phone, Mail, Search, ShoppingCart } from "lucide-react";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";

import  SiteNavigation from "@/components/home/site-navigation";
import NavMobile from "@/components/home/nav-mobile";
import { Image } from "astro:assets";

const cartItems = 3; // You can pass this as a prop or from Astro props later
---

<header class="border-b bg-white sticky top-0 z-50">
  <!-- Top bar -->
  <div class="bg-primary text-white py-2">
    <div class="container mx-auto px-4 flex justify-between items-center text-sm">
      <div class="flex items-center gap-4">
        <div class="flex items-center gap-2">
          <Phone className="h-4 w-4" />
          <span>+1 (555) 123-4567</span>
        </div>
        <div class="flex items-center gap-2">
          <Mail className="h-4 w-4" />
          <span>info@techstore.com</span>
        </div>
      </div>
      <div class="hidden md:block">
        <span>Trang đang trong test mode</span>
      </div>
    </div>
  </div>

  <!-- Main header -->
  <div class="container mx-auto py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <div class="text-white rounded-lg">
          <Image src="/logo.jpeg" alt="Logo" width={80} height={80} class="h-30 w-30 object-cover" />
        </div>
        <div>
          <h1 class="font-bold text-xl text-gray-900">Thiên Vũ</h1>
          <p class="text-sm text-gray-600">Giải pháp cho máy tính</p>
        </div>
      </a>

      <!-- Search bar -->
      <div class="hidden md:flex flex-1 max-w-md mx-8">
        <div class="relative w-full">
          <Input type="search" placeholder="Tìm kiếm sản phẩm..." className="pl-10 pr-4" />
          <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400" />
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-4">
        
          <Button variant="success" size="sm" className="hidden rounded-full md:flex">
            Đặt lịch Zalo
          </Button>

        <!-- Mobile menu -->
        <NavMobile client:load/>
      </div>
    </div>

    <!-- Navigation -->
    <SiteNavigation client:load/>
  </div>
</header>
